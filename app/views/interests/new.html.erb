</div>

<!-- CONTENT -->
<div id="maincontent">
  <div class="site_body">
    <div class="container Center">
      <div class="wide_wrapper" id="header">
        <!-- HORIZONTAL BREAK -->
        <div class="linebreak"></div>
        <div id="logo_tagline">

          <!-- HEADER-->
          <div id="name_or_logo">
            
            <h1 class="logo" data-mercury="text" data-content-name="title">
              presidio art  
            </h1>
            
            </div>

            <!-- TAGLINE -->
            
              <div class="title" data-mercury="text" data-content-name="tagline">Beautifully curated SF Presidio photos in your home every month.</div>
            
        </div>
      </div>

      <div class="wide_wrapper" id="content">
        <!-- DESCRIPTION -->
        <p id="notice"><%= notice %></p>
        <div id="description" data-mercury="wysihat" data-content-name="description">
          
          <h2>Signup for the limited first batch</h2><h2>February 2014.</h2>
        
        </div> 

        <!-- FORM -->
        <div id="form">

<%= render 'form' %>


          <!-- THANK YOU RESPONSE -->
                    <div class="thanks" id="kol_thank_you"></div>
          <script type="kol/template" id="__response">
          
          <div id="subscribe">
            <div class="common_thank_you_message">
              {{content.thank_you_message}}
            </div>
          </div>
          
          
            <div id="post-form-content" class="description " data-mercury="wysihat" data-content-name="after_form">
              We respect your email address privacy.
            </div>
          
          <div class="clear"></div>
