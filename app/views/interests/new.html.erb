    <div class="wide_wrapper" id="footer">
      <p class="right" id="copyright"> <span data-mercury="wysihat" data-content-name="copyright">Â© 2013</span>
       </p>
      <p class="social_links">
        
          <a class="email" href="mailto:goartsidio@gmail.com">
            <span class="colorslide"></span>
            <i class="icon-envelope"></i>
          </a>
        
      </p>
      <div class="clear"></div>
    </div>
  </div>
</div>



